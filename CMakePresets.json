{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": { "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}" }
    },
    {
      "name": "windows_base",
      "hidden": true,
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ]
        }
      }
    },
    {
      "name": "linux_base",
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Linux"
          ]
        },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "macos_base",
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "macOS"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "macOS"
          ]
        },
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "windows_msvc",
      "inherits": "windows_base",
      "displayName": "MSVC",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "windows_msvc_asan",
      "inherits": "windows_msvc",
      "displayName": "MSVC | ASAN",
      "environment": {
        "CFLAGS": "/fsanitize=address",
        "CXXFLAGS": "/fsanitize=address"
      }
    },
    {
      "name": "windows_clang",
      "hidden": true,
      "inherits": "windows_base",
      "displayName": "Clang",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-clang-x64",
          "enableClangTidyCodeAnalysis": true
        }
      }
    },
    {
      "name": "linux_clang",
      "inherits": "linux_base",
      "displayName": "Clang",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_COMPILER_CLANG_SCAN_DEPS": "clang-scan-deps"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-clang-x64"
        }
      }
    },
    {
      "name": "linux_gcc",
      "inherits": "linux_base",
      "displayName": "GCC",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "linux-gcc-x64"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows_debug_msvc",
      "displayName": "Debug",
      "configurePreset": "windows_msvc",
      "configuration": "Debug"
    },
    {
      "name": "windows_qa_msvc",
      "displayName": "Quality Assurance",
      "configurePreset": "windows_msvc",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "windows_release_msvc",
      "displayName": "Release",
      "configurePreset": "windows_msvc",
      "configuration": "Release"
    },
    {
      "name": "windows_debug_msvc_asan",
      "displayName": "Debug",
      "configurePreset": "windows_msvc_asan",
      "configuration": "Debug"
    },
    {
      "name": "windows_qa_msvc_asan",
      "displayName": "Quality Assurance",
      "configurePreset": "windows_msvc_asan",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "linux_debug_clang",
      "displayName": "Debug",
      "configurePreset": "linux_clang",
      "configuration": "Debug"
    },
    {
      "name": "linux_release_clang",
      "displayName": "Release",
      "configurePreset": "linux_clang",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "linux_dist_clang",
      "displayName": "Distribution",
      "configurePreset": "linux_clang",
      "configuration": "Release"
    },
    {
      "name": "linux_debug_gcc",
      "displayName": "Debug",
      "configurePreset": "linux_gcc",
      "configuration": "Debug"
    },
    {
      "name": "linux_release_gcc",
      "displayName": "Release",
      "configurePreset": "linux_gcc",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "linux_dist_gcc",
      "displayName": "Distribution",
      "configurePreset": "linux_gcc",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "test_windows_msvc",
      "configurePreset": "windows_msvc",
      "configuration": "Debug"
    },
    {
      "name": "test_windows_clang",
      "configurePreset": "windows_clang",
      "configuration": "Debug"
    }
  ]
}
